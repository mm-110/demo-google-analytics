---
import BaseLayout from "../layouts/BaseLayout.astro";

const services = [
    {
        title: "GTM Audit",
        description:
            "A comprehensive review of your Google Tag Manager container to identify issues and optimize performance.",
        icon: "üîç",
    },
    {
        title: "GA4 Implementation",
        description:
            "Full setup of Google Analytics 4, including custom events, conversions, and e-commerce tracking.",
        icon: "üìà",
    },
    {
        title: "Server-Side Tagging",
        description:
            "Advanced implementation using a server container to improve data accuracy and privacy.",
        icon: "‚òÅÔ∏è",
    },
    {
        title: "Training & Workshops",
        description:
            "Customized training sessions for your team to master GTM and GA4.",
        icon: "üéì",
    },
];
---

<BaseLayout title="Services" description="Our Analytics Services">
    <main>
        <h1>Our Services</h1>
        <p>
            We offer specialized services to help you get the most out of your
            data. Navigate through these services to test tracking of list
            clicks and interactions.
        </p>

        <div class="services-grid">
            {
                services.map((service) => (
                    <div class="service-card">
                        <div class="icon">{service.icon}</div>
                        <h3>{service.title}</h3>
                        <p>{service.description}</p>
                        <button>Learn More</button>
                    </div>
                ))
            }
        </div>
    </main>
</BaseLayout>

<style>
    .services-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        margin-top: 2rem;
    }

    .service-card {
        border: 1px solid rgb(var(--gray-light));
        border-radius: 8px;
        padding: 1.5rem;
        background: white;
        transition:
            transform 0.2s ease,
            box-shadow 0.2s ease;
    }

    .service-card:hover {
        transform: translateY(-5px);
        box-shadow: var(--box-shadow);
    }

    .icon {
        font-size: 2.5rem;
        margin-bottom: 1rem;
    }

    h3 {
        margin-bottom: 0.5rem;
        color: var(--accent-dark);
    }

    button {
        background-color: var(--accent);
        color: white;
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        cursor: pointer;
        margin-top: 1rem;
        transition: background-color 0.2s;
    }

    button:hover {
        background-color: var(--accent-dark);
    }
</style>
